{
  "name": "indeed-filter-frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "bootstrap": "^5.2.3",
    "luxon": "^3.1.1",
    "react": "^18.2.0",
    "react-bootstrap": "^2.7.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "BUILD_PATH=../src/main/resources/static react-scripts build",
    "test": "react-scripts test",
    "lint": "eslint --ext js src",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "arrow-spacing": "error",
      "brace-style": "error",
      "comma-spacing": "error",
      "comma-style": "error",
      "eol-last": "error",
      "func-call-spacing": "error",
      "indent": [
        "error",
        2
      ],
      "jsx-quotes": "error",
      "key-spacing": "error",
      "keyword-spacing": "error",
      "linebreak-style": "error",
      "no-multi-spaces": "error",
      "no-multiple-empty-lines": "error",
      "no-tabs": "error",
      "no-trailing-spaces": "error",
      "nonblock-statement-body-position": "error",
      "quotes": "error",
      "semi": "error",
      "semi-spacing": "error",
      "semi-style": "error",
      "space-before-blocks": "error",
      "space-infix-ops": "error",
      "space-unary-ops": "error"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
